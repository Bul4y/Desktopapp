<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapProject.Pages.UserBaseHeader"
             Padding="0,15">
    <Image Source="nfcapplogo.png"
           WidthRequest="120">
        <Image.Shadow>
            <Shadow Brush="Black"
                Offset="-8,10"
                Radius="10"
                Opacity=".7" />
        </Image.Shadow>
    </Image>
    <Label Text="Username" 
           x:Name="UserName"
           Padding="10"
           HorizontalOptions="Center"
           FontSize="20"/>
</StackLayout>